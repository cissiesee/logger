{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "lib": [
            "es2015",
            "es2017",
            "dom"
        ]
    },
    "awesomeTypescriptLoaderOptions": {
        "useBabel": true,
        "babelOptions": {
            "babelrc": false, /* Important line */
            "presets": [
                [
                    "env",
                    {
                        "browsers": [
                            "last 2 Chrome versions",
                            "ie >= 8",
                            "Firefox >= 20",
                            "iOS 7",
                            "> 5%"
                        ]
                    }
                ]
            ],
            "plugins": [
                "transform-runtime"
            ]
        }
        //"babelCore": "@babel/core" // needed for Babel v7
    },
    "files": [
        "./src/index.ts"
    ],
    "exclude": [
        //不包括的文件
        "node_module",
        "test"
    ]
}